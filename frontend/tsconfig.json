{
    "compilerOptions": {
        /* Language and Environment */
        "target": "ES2020", // Modern JavaScript features
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ], // Include browser APIs
        "jsx": "react-jsx", // Modern React JSX transform (no need to import React)
        /* Modules */
        "module": "ESNext", // Use latest module system
        "moduleResolution": "bundler", // Vite-specific resolution
        "resolveJsonModule": true, // Allow importing JSON files
        "allowImportingTsExtensions": true, // Allow .ts/.tsx in imports
        /* Emit */
        "noEmit": true, // Vite handles compilation, TypeScript only checks types
        /* Interop Constraints */
        "esModuleInterop": true, // Better CommonJS/ESM compatibility
        "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
        "forceConsistentCasingInFileNames": true, // Enforce consistent file name casing
        "isolatedModules": true, // Each file must be independently compilable
        /* Type Checking */
        "strict": true, // Enable all strict type checking options
        "noUnusedLocals": true, // Error on unused local variables
        "noUnusedParameters": true, // Error on unused function parameters
        "noFallthroughCasesInSwitch": true, // Error on switch fallthrough
        "skipLibCheck": true // Skip type checking of declaration files (faster)
    },
    "include": [
        "src"
    ], // Include all files in src directory
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ] // Reference for Vite config
}